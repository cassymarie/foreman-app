
<h2 id="sub_header"><%=@jobsite.name%>
    <button class="subheader_button"><%= link_to 'My Sites', jobsites_path %></button>
</h2>
    <div class="row">
        <div class="col-md-5 jobsite_form">   
            <h2 id="form_header"> <%= link_to'Jobs', jobsite_jobs_path(@jobsite) %></h2> 
            <%= render partial: "jobsites/collection_table", locals: {jobsite: @jobsite, collection: @jobsite.jobs, view_by: 'none', show: 'jobs', editable: false, customer: false, job_areas: true} %>
        </div>

        <div class="col-md-4 jobsite_form">
            <h2 id="form_header"> <%= link_to'Employees', jobsite_employees_path(@jobsite) %></h2> 
            <%= render partial: "jobsites/collection_table", locals: {jobsite: @jobsite, collection: @jobsite.employees, view_by: 'none', show: 'employees', editable: false, customer: false, job_areas: false} %>
        </div>

        <div class="col-md-2 jobsite_form">
            <%= render "time_entries/day_select" %>
        </div>
    </div>
