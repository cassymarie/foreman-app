<h2 id="sub_header">
    <a href="/jobsites">My Jobsites</a>
    <button  class="subheader_button"><a href="/jobsites">Back</a></button>
</h2>

<div id="form">
    <h2>Delete Jobsite </h2>
    <h4> Are you sure you want to delete this jobsite? <br> All associated records for this site will be deleted </h4>
        <form action="/jobsite/delete/<%=@jobsite.id%>" method="POST">
            <input type="hidden" value="delete" name="_method">
            <br><h1 style="color:red;"> <%=@jobsite.name%> </h1><br>
            <input id="submit_button" type="submit" value="Delete!">
        </form><br><br>
        <% if @current_user.jobsites.size > 0 %>
            <div id="display_list">   
                <h2>My Jobsites</h2> 
                <table>
                    <% @current_user.jobsites.each do |jobsite|%>
                        <tr>
                            <td  style="width:1%" ><button><a href="/jobsite/delete/<%= jobsite.id %>">X</a></button></td>
                            <td  style="width:1%" ><button><a href="/jobsite/edit/<%= jobsite.id %>">...</a></button></td>
                            <td padding-left=10px; style="text-align:left;"><%=jobsite.name%></td>
                        </tr>
                    <%end%>
                </table>
            </div>
        <%end%>
</div>