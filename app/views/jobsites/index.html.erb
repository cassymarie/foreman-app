

<div class="jobsite_form">
    <h2 id="sub_header"> My Jobsites <button class="subheader_button" ><%= link_to 'Edit Jobsites', new_jobsite_path %></button></h2>
    <div class="row">
        <% @jobsites.each do |jobsite|%>
            <div class="col-xs-6 col-md-3 jobsite_card">
                <h3><%= link_to jobsite.name, jobsite_path(jobsite)%></h3>
                <p><%= jobsite.jobs.size %> Current Jobs </p>
                <p><%= jobsite.employees.size %> Site Employees </p>
            </div>
        <%end%>
    </div>
</div>