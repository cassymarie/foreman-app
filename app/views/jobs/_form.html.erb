
    <div id="form">
    <%= form_with(model: @job.new_record? ? [@jobsite, @job] : @job, local: true) do |f| %>
        <%= f.hidden_field :jobsite_id, value: @jobsite_id%>
        <div class='container-fluid'>
            <div class="row">
                <div class="col-md-3">
                    <%= f.label 'Job #' %>
                    <%= f.text_field :job_number %>
                </div>
                <div class="col-md-4">
                    <%= f.label 'Job Name' %>
                    <%= f.text_field :name %>
                </div>
                <div class="col-md-4">
                    <%= f.label 'Customer' %>
                    <%= f.text_field :customer %>
                </div>
            </div>
        </div>

        <% if !@jobsite.site_areas.nil? %>
            <div class='container-fluid'>
                <div class="row">
                    <div>
                        <strong>Jobsite Areas</strong>
                        <%= f.fields_for :area do |a| %>
                            <%= a.collection_check_boxes :id, @jobsite.site_areas, :id, :code %>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>

        <%= f.submit %>
    <% end %>
</div>
