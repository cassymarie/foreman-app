
<%= f.hidden_field :jobsite_id, value: @jobsite.id %>
<div class='container-fluid form-sect'>
    <div class="form-group col-xs-7">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Example Jobsite" %>
    </div>
    <div class="form-group">
        <div class="form-group col-xs-5">
            <%= f.label :city, class: "form-label" %>
            <%= f.text_field :city,  class: "form-control", placeholder: "Atlanta" %>
        </div>
        <div class="form-group col-xs-2">
            <%= f.label :state, class: "form-label" %>
            <%= f.text_field :state,  class: "form-control", placeholder: "GA" %>
        </div>
    </div>
</div>
<%= f.submit :class => 'edit-btn' %>

