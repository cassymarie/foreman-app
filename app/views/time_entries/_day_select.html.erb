<h2 id="form_header" >Time Entry</h2>

    <%= form_with url: jobsite_time_entry_by_day_path(@jobsite) do |f|  %>
        <%= f.label 'Select Day to View' %>
        <%= f.select :workday, Date::DAYNAMES.zip((0..6).to_a) %>
        <%= f.hidden_field :workday, id:"workday" %>
        <br><br>
        <%= f.label 'For Week Ending (Sunday)' %>
                <input type="hidden" id="workday">
        <%= f.date_field :week_ending %>

                <br><br>
        <%= f.submit 'Edit/View' %>
    <% end %>
    <script src="/javascript/time_entry.js"  type="text/javascript"></script>